package arrays1;

import java.util.Scanner;

/**
 * EUC  que contenga un método que reciba un arreglo tipo int y que retorne 
 * true (verdadero) si en la primera o en la última posición hay un 6, 
 * y falso (false) si no.
 * @author pablo.villar.serrano
 *
 */
public class Eje1 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int tam = 10;
		int[] array = new int[tam];
		
		System.out.println("Introduce los 10 numeros del array");
		
		for (int i=0; i<array.length; i++) {
			
			array[i]=sc.nextInt();
		}
//		for (int i=0; i<array.length; i++) {
//			System.out.println(array[i]);
//		}
		
		if (comprobar(array[])==true){
			
		}
		
		sc.close();

	}
	public boolean comprobar(int array[]) {
		
		if(array[0]==6 || array[array.length]==6) {
			return true;
		}
		else
			return false;
	}

}
